using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Sphere : MonoBehaviour
{
    public string gamename = "Projeto";

    public float eixox;
    public float eixoy;

    // Start is called before the first frame update
    void Start()
    {
        Debug.Log("\nStart\n" + gamename);
    }

    // Update is called once per frame
    void Update()
    {
        eixox = Input.GetAxis("Horizontal");
        eixoy = Input.GetAxis("Vertical");
        //eixoz = Input.GetAxis("Longitudinal");

        transform.Translate(Vector3.right * eixox);
        transform.Translate(Vector3.forward * eixoy);
        /*
        transform.Translate(Vector3.forward * eixoz);
        transform.Translate(Vector3.back * eixoz);
        */


    }
}
